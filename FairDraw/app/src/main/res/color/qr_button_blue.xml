<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed/selected state: slightly darker blue (matches top bar tone) -->
    <item android:state_pressed="true" android:state_enabled="true" android:color="#2E57FF" />
    <item android:state_selected="true" android:color="#2E57FF" />

    <!-- Disabled state: use card_blue (lighter) to indicate disabled -->
    <item android:state_enabled="false" android:color="@color/card_blue" />

    <!-- Default: project brand blue -->
    <item android:color="@color/brand_blue" />
</selector>
