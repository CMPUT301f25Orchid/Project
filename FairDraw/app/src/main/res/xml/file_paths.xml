<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- This path allows sharing of files from the app's private cache directory -->
    <cache-path
        name="shared_images"
        path="images/" />

    <!-- This path allows sharing of files from the app's private files directory -->
    <files-path
        name="my_files"
        path="." />

    <!-- If you need to share files from external storage, you can use external-path -->
    <external-path
        name="external_files"
        path="." />
</paths>