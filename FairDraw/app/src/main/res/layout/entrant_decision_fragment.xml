<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:gravity="center">

    <!-- Centered white card -->
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:background="@drawable/bg_white_card"
android:padding="20dp"
android:elevation="8dp">

<!-- Header text -->
<TextView
    android:id="@+id/dialog_congratulations"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="CONGRATULATIONS! YOU HAVE WON THE LOTTERY FOR"
    android:textColor="#000000"
    android:textStyle="bold"
    android:textAllCaps="true"
    android:textAlignment="center"
    android:paddingBottom="8dp"
    android:textSize="14sp" />

<!-- Event name -->
<TextView
    android:id="@+id/dialog_event"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="“SWIMMING LESSONS FOR BEGINNERS”"
    android:textStyle="bold"
    android:textColor="#000000"
    android:textAlignment="center"
    android:paddingBottom="12dp"
    android:textSize="15sp"/>

<!-- Message -->
<TextView
    android:id="@+id/dialog_message"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Please select whether you would like to accept or decline this invitation for registration"
    android:textAlignment="center"
    android:textColor="#444444"
    android:paddingBottom="16dp"
    android:textSize="15sp" />

<!-- Buttons Row -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center">

    <Button
        android:id="@+id/decline_button"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:text="DECLINE"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:background="@drawable/bg_decline_button"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/accept_button"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:text="ACCEPT"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:background="@drawable/bg_accept_button" />
</LinearLayout>

</LinearLayout>
    </FrameLayout>
