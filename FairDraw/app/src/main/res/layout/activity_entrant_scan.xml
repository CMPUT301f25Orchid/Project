<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.EntrantScan">

    <!-- Top Bar -->
    <include
        android:id="@+id/top_bar"
        layout="@layout/top_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bottom Navigation -->
    <include
        android:id="@+id/bottom_nav_bar"
        layout="@layout/entrant_bottom_nav_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Page Title -->
    <TextView
        android:id="@+id/titleScan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Scan QR Code"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scanner container (square with 1:1 ratio) -->
    <FrameLayout
        android:id="@+id/scanContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#0E172A"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/titleScan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tipsCard"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintDimensionRatio="1:1">

        <com.journeyapps.barcodescanner.DecoratedBarcodeView
            android:id="@+id/barcodeScanner"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <!-- Small QR icon below the frame (placeholder icon) -->
    <ImageView
        android:id="@+id/qrIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@android:drawable/ic_menu_camera"
        android:contentDescription="QR Code Icon"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/scanContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="#808080" />

    <!-- Instruction headline -->
    <TextView
    android:id="@+id/instructionTitle"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="Point your camera at a QR code"
    android:textSize="16sp"
    android:textStyle="bold"
    android:gravity="center"
    android:layout_marginTop="8dp"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    app:layout_constraintTop_toBottomOf="@id/qrIcon"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

    <!-- Instruction subtitle -->
    <TextView
    android:id="@+id/instructionSubtitle"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="QR codes are displayed on event posters in community centres"
    android:textSize="14sp"
    android:textColor="#808080"
    android:gravity="center"
    android:layout_marginTop="4dp"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    app:layout_constraintTop_toBottomOf="@id/instructionTitle"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tips card -->
    <LinearLayout
        android:id="@+id/tipsCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="#E6EEF9"
        app:layout_constraintTop_toBottomOf="@id/instructionSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav_bar">

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tips for scanning"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#1A2B44"
        android:layout_marginBottom="8dp" />

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="• Ensure good lighting" />

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="• Hold steady and centre the QR code"
        android:layout_marginTop="4dp" />

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="• Keep camera about 6–12 inches away"
        android:layout_marginTop="4dp" />
    </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
