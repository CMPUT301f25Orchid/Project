<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/eventCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Image + Overlay -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/eventImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/swimming" />

            <TextView
                android:id="@+id/eventStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open For Registration"
                android:textColor="#FFFFFF"
                android:background="@color/black"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_gravity="end|top"
                android:layout_margin="8dp" />
        </FrameLayout>

        <!-- Details section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp">

            <TextView
                android:id="@+id/eventTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Title"
                android:textSize="17sp"
                android:textStyle="bold"
                android:paddingBottom="5dp"/>

            <TextView
                android:id="@+id/eventLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Location"
                android:textColor="#2b7ae4"
                android:textSize="15sp"
                android:paddingBottom="2dp"/>

            <TextView
                android:id="@+id/eventDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Date"
                android:textSize="15sp"
                android:paddingBottom="2dp"/>

            <TextView
                android:id="@+id/eventCapacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/0 confirmed - 0 on waiting list"
                android:textSize="15sp"
                android:paddingBottom="2dp"/>

            <TextView
                android:id="@+id/eventPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0"
                android:textSize="15sp"
                android:paddingBottom="7dp"/>

            <Button
                android:id="@+id/viewDetailsButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:minWidth="96dp"
                android:text="View Details"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:backgroundTint="#2b7ae4"
                android:layout_gravity="end"
                android:paddingHorizontal="16dp"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
