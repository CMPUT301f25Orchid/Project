<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.OrganizerManageEvent">

    <!-- Top Bar -->
    <include
        android:id="@+id/top_bar"
        layout="@layout/top_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bottom Navigation -->
    <include
        android:id="@+id/bottom_nav_bar"
        layout="@layout/organizer_bottom_nav_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/contentScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/contentRoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp">

            <!-- Hero image -->
            <ImageView
                android:id="@+id/heroImage"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_marginTop="12dp"
                android:layout_weight="0"
                android:background="@color/card_gray"
                android:contentDescription="Event Banner" />

            <!-- Title + status pill row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Drumming Lessons"
                    android:textStyle="bold"
                    android:textSize="22sp"/>

                <TextView
                    android:id="@+id/tvStatusPill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registration Closed"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:background="@drawable/bg_status_closed"/>
            </LinearLayout>

            <!-- Description -->
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Drumming lessons to turn you from a beginner to a pro! Engaging lessons with our very own professional drummer and musician Matt Smith..."
                android:textSize="14sp"/>

            <!-- Primary action -->
            <Button
                android:id="@+id/btnDrawAndInvite"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:textAllCaps="false"
                android:text="Draw Entrants Sample And Send Invites"
                android:background="@color/card_blue"
                android:textColor="@android:color/white"/>

            <!-- Two-by-two grid: Invited / Cancelled on top row, Registered / Waiting on bottom row -->
            <LinearLayout
                android:id="@+id/twoByTwoGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:baselineAligned="false">

                <!-- Top row: Invited | Cancelled -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="6dp">

                    <!-- Invited -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvInvitedHeader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Invited Entrants"
                            android:textStyle="bold"
                            android:textSize="14sp"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="220dp"
                            android:layout_marginTop="6dp"
                            app:cardUseCompatPadding="true"
                            app:cardBackgroundColor="@android:color/white"
                            app:cardCornerRadius="10dp">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvInvited"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:nestedScrollingEnabled="false"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <!-- Cancelled -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvCancelledHeader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cancelled Entrants"
                            android:textStyle="bold"
                            android:textSize="14sp"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="220dp"
                            android:layout_marginTop="6dp"
                            app:cardUseCompatPadding="true"
                            app:cardBackgroundColor="@android:color/white"
                            app:cardCornerRadius="10dp">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvCancelled"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:nestedScrollingEnabled="false"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>

                <!-- Bottom row: Registered | Waiting -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- Registered -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvRegisteredHeader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Registered Entrants"
                            android:textStyle="bold"
                            android:textSize="14sp"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="220dp"
                            android:layout_marginTop="6dp"
                            app:cardUseCompatPadding="true"
                            app:cardBackgroundColor="@android:color/white"
                            app:cardCornerRadius="10dp">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvRegistered"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:nestedScrollingEnabled="false"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <!-- Waiting List -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvWaitingHeader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:text="Waiting List"
                            android:textStyle="bold"
                            android:textSize="14sp"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="220dp"
                            android:layout_marginTop="6dp"
                            app:cardUseCompatPadding="true"
                            app:cardBackgroundColor="@android:color/white"
                            app:cardCornerRadius="10dp">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvWaiting"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:nestedScrollingEnabled="false"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <!-- Action buttons -->
            <Button
                android:id="@+id/btnSendNotification"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:textAllCaps="false"
                android:text="Send Notification"
                android:background="#FFB0B0"/>

            <Button
                android:id="@+id/btnReturn"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@color/status_won"
                android:text="Download Final Entrants CSV"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnSeeWaitingMap"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:textAllCaps="false"
                android:text="See Waiting List Map"
                android:background="#99B5FA"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>