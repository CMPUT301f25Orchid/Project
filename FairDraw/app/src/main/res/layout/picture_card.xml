<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/organizerEventCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Image + Overlay -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/event_picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/swimming" />

        </FrameLayout>

        <!-- Details section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp">

            <TextView
                android:id="@+id/event_picture_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Swimming Lessons for B.."
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingTop="6dp"
                android:paddingBottom="2dp"
                android:textColor="#000" />

            <TextView
                android:id="@+id/event_picture_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Anne Hathaway"
                android:textSize="14sp"
                android:textColor="#888" />

            <!-- Delete Row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/delete_image_icon"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/delete"
                    android:tint="#D32F2F"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/delete_image_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="delete image"
                    android:textColor="#D32F2F"
                    android:textSize="14sp" />
            </LinearLayout>







        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
