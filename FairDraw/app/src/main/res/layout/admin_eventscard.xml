<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="14dp">

    <!--Contains all the content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- LEFT IMAGE -->
        <ImageView
            android:id="@+id/event_image"
            android:layout_width="135dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/swimming"
            android:layout_marginRight="5dp"/>

        <!--Contains the event details-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="8dp">

            <!--Contains the title and delete icon-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/event_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event Title"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_alignParentStart="true"/>

                <ImageButton
                    android:id="@+id/delete_button"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="TODO"
                    android:background="@drawable/delete_icon"
                    android:padding="4dp"/>
            </RelativeLayout>

            <!--Contains the event location and icon-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="20dp"
                    android:src="@drawable/location_icon" />

                <TextView
                    android:id="@+id/event_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event Location"
                    android:textSize="15sp"
                    android:layout_marginLeft="3dp"/>
            </LinearLayout>

            <!--Contains title icon -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/admin_profile_icon" />

                <TextView
                    android:id="@+id/eventOrganizer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Organizer"
                    android:textSize="15sp"
                    android:layout_marginLeft="6dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/event_organizer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Organizer Name"
                android:textSize="15sp"
                android:textColor="#9c9c9c"
                android:layout_marginLeft="6dp"/>

            <TextView
                android:id="@+id/event_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="id: org 12-31-007"
                android:textColor="#A0A0A0"
                android:textSize="13sp"
                android:layout_marginTop="6dp"
                android:layout_gravity="end"/>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
