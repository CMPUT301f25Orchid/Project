<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg_dialog_blue_border">

    <!-- Title row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvDialogTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SEND NOTIFICATION"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Close Modal"
            android:src="@drawable/ic_close_24"/>
    </LinearLayout>

    <!-- Message label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message:"
        android:layout_marginTop="12dp"
        android:textStyle="bold"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:hint="Enter Your Message Here">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etMessage"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:maxLines="6" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Send to -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Send to:"
        android:textStyle="bold"/>

    <RadioGroup
        android:id="@+id/rgAudience"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp">

        <RadioButton
            android:id="@+id/rbWaiting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All Entrants on Waiting List"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/rbSelected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All Selected Entrants"/>

        <RadioButton
            android:id="@+id/rbCancelled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All Cancelled Entrants"/>
    </RadioGroup>

    <!-- Actions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="12dp">

        <Button
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="SEND NOTIFICATION"
            android:background="@color/brand_blue"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="CANCEL"
            android:layout_marginStart="12dp"
            android:background="@color/card_red"/>
    </LinearLayout>
</LinearLayout>
